%h1 Rides#create
%p Find me in app/views/rides/create.html.erb

= form_for @ride , id: 'ride-form' do |f|
  = f.label :location_from
  = f.text_field :location_from, required: true, list: 'locations-datalist', class: 'location-autocomplete'  
  = f.label :location_to
  = f.text_field :location_to, required: true
  = f.label :date_time_when
  = f.datetime_field :date_time_when, required: true
  = f.label :offer_fare
  = f.text_field :offer_fare
  - f.submit
%button.btn.btn-primary{"data-target" => "#exampleModal", "data-toggle" => "modal", :type => "button"}
  Next

#exampleModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "exampleModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header
        %h5#exampleModalLabel.modal-title Confirm Ride
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
      .modal-body
        \...
      .modal-footer
        %button.btn.btn-secondary{"data-dismiss" => "modal", :type => "button"} Close
        %button.btn.btn-primary{:type => "button", id: "confirmButton"} Confirm



:javascript
  $(document).ready(function() {
    // Handle Next button click
    $('#nextButton').click(function() {
